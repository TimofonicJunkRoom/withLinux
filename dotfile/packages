#!/bin/sh
set -e
. ../lang/lumin_log.sh

# packages
packages="
ack
axel
bbswitch-dkms
bmon
bpython3
blender
build-essential
busybox-static
codespell
command-not-found
cryptsetup
debhelper
debmake
debmirror
devscripts
dmenu
dnsmasq
dnsutils
docker.io
dstat
dwm
eatmydata
ecryptfs-utils
fail2ban
fcitx
fcitx-googlepinyin
ffmpeg
filezilla
fish
fonts-inconsolata
gdb
git
git-buildpackage
gitg
gogs
gpm
gsmartcontrol
guake
gufw
hdf5-tools
hostapd
htop
i3
ipython3
julia
jupyter-notebook
latexila
less
libblas-dev
libgoogle-glog-dev
libhdf5-dev
libopenblas-dev
lm-sensors
lshw
lsof
ltrace
luajit
lyx
mawk
octave
openconnect
pandoc
parallel
pep8
pppoeconf
ppsspp
progress
python3-ipdb
python3-pip
qemu
qtqr
quilt
rfkill
rsync
rustc
sakura
sed
shorewall
smartmontools
snapper
snort
spyder3
sqlite3
sshfs
strace
stterm
subversion
sudo
swig
taskwarrior
teeworlds
terminology
texlive-full
tpp
ttf-ubuntu-font-family
ubuntu-dev-tools
ufw
unar
vainfo
vim
vim-pathogen
vim-youcompleteme
virtualbox
w3m
wesnoth
wine32-development
zfsnap
zfsutils-linux
"

# start scanning
for pkg in $packages; do
  if (dpkg -s $pkg 1>/dev/null 2>&1); then
    if (dpkg -s $pkg | grep ^Status | grep 'install ok installed' 1>/dev/null); then
      info "scan pkg: $pkg ... install ok"
    else
      warn "scan pkg: $pkg ... missing"
    fi
  else
    error "scan pkg: $pkg ... missing or invalid"
  fi
done
