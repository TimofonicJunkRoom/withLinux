#!/bin/sh
set -e
. ../lang/lumin_log.sh

# my base packages : fish git htop pip3 rsync ufw vim

# packages
packages="
ack
apt-xapian-index
arandr
atom
axel
bbswitch-dkms
bmon
bpython3
blender
btrfs-progs
build-essential
busybox-static
catimg
cmus
codespell
command-not-found
compton
cryptsetup
debhelper
debian-policy
debmake
debmirror
devscripts
dgit
dmenu
dnsmasq
dnsutils
docker.io
dstat
dunst
dwm
eatmydata
ecryptfs-utils
epiphany-browser
fail2ban
fbi
fcitx
fcitx-googlepinyin
ffmpeg
filezilla
fish
fluxbox
fonts-inconsolata
fonts-consolas
fzf
gdb
git
git-buildpackage
gitg
glances
gnome-builder
gogs
gpm
gprof2dot
grc
gsmartcontrol
guake
gufw
hdf5-tools
hostapd
htop
i3
inxi
ipython3
julia
jupyter-notebook
jupyter-qtconsole
latexila
less
lftp
libblas-dev
libgoogle-glog-dev
libhdf5-dev
libopenblas-dev
linux-perf
lm-sensors
lshw
lsof
ltrace
luajit
lyx
mame
mawk
mousepad
mtr
mupdf
ncdu
octave
oh-my-zsh
openconnect
p7zip
pelican
pandoc
parallel
pep8
pigz
plank
pppoeconf
ppsspp
