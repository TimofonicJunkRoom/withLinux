wine32-development
wxmaxima
xbindkeys
xrandr
zfsnap
zfsutils-linux
zsh
"

# start scanning
for pkg in $packages; do
  if (dpkg -s $pkg 1>/dev/null 2>&1); then
    if (dpkg -s $pkg | grep ^Status | grep 'install ok installed' 1>/dev/null); then
      info "scan pkg: $pkg ... install ok"
    else
      warn "scan pkg: $pkg ... missing"
    fi
  else
    error "scan pkg: $pkg ... missing or invalid"
  fi
done
